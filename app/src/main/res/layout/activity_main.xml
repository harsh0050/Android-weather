<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/app_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="4dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/app_name"
            android:textSize="22sp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_bg"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enable_suggestion_switch">

        <ImageView
            android:id="@+id/current_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:contentDescription="@string/current_location"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:src="@drawable/baseline_my_location_24" />

        <AutoCompleteTextView
            android:id="@+id/location_edit_text"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/location"
            android:padding="10dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/search"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:src="@drawable/baseline_search_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/showing_result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        tools:text="Showing Weather of: New Delhi" />

    <ImageView
        android:id="@+id/weather_image_view"
        android:layout_width="358dp"
        android:layout_height="358dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/weather_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/showing_result_text_view"
        app:layout_constraintVertical_bias="0"
        tools:src="@tools:sample/avatars" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/weather_image_view"
        app:layout_constraintEnd_toEndOf="@+id/weather_image_view"
        app:layout_constraintStart_toStartOf="@+id/weather_image_view"
        app:layout_constraintTop_toTopOf="@+id/weather_image_view" />

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/weather_icon"
        app:layout_constraintStart_toStartOf="@+id/weather_image_view"
        app:layout_constraintTop_toBottomOf="@+id/weather_image_view"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/degrees_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textSize="23sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/weather_image_view"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/weather_icon"
        app:layout_constraintTop_toTopOf="@+id/weather_icon"
        tools:text="Temperature: 12 `C / 48 F" />

    <TextView
        android:id="@+id/weather_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/degrees_text_view"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/degrees_text_view"
        app:layout_constraintTop_toBottomOf="@+id/degrees_text_view"
        tools:text="Cloudy" />


    <Switch
        android:id="@+id/enable_suggestion_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:checked="false"
        android:text="@string/city_suggestion"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@id/app_heading"
        app:showText="true" />

</androidx.constraintlayout.widget.ConstraintLayout>
